<div class="container_new">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 style="color: #E1D89F ; font-size:1.1cm ; position:relative; text-align: center;" class="fw-bold mb-2">Edit my offer</h2>
                <hr>
                <form class="form1" action="/offer/edit" method="POST" enctype="multipart/form-data">
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <select style="background-color: #E1D89F;" name="type" id="type" value="{{foundOffer.typeOFfer}}">
                                    <option style="color:black ;" value="Sale">For sale</option>
                                    <option value="rent">For rent</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <select style="background-color: #E1D89F;" name="type" id="type" value="{{foundOffer.type}}">
                                    <option style="color:black ;" >Flat</option>
                                    <option value="house">House</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F; " type="text" name="name"
                                    placeholder="Title of the property" value="{{foundOffer.name}}" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="text" name="address"
                                    placeholder="Address" value="{{foundOffer.address}}" class=" form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="number" name="landSize"
                                    placeholder="Land size" value="{{foundOffer.landSize}}" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="file" name="image-cover"
                                    placeholder="Image" class=" form-control-file" required />
                            </div>
                        </div>
                    </div>
                    <div class="row1">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="number" name="price"
                                    placeholder=" Price in $"  value="{{foundOffer.price}}" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="choice">
                        <div class="row1">
                            <div class="col-md-8 mb-3">
                                <div class="form-outline">
                                    <label style="color: #E1D89F ;font-size:larger ; " for="toilets">Toilets</label>
                                    <select style="background-color: #E1D89F;" name="toilets" id="toilets" value="{{foundOffer.toilets}}">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                    <label>
                                </div>
                            </div>
                            <div class="col-md-8 mb-3">
                                <div class="form-outline">
                                    <label style="color: #E1D89F ; font-size:larger ; " for="bedrooms">Bedrooms</label>
                                    <select style="background-color: #E1D89F;" name="bedrooms" id="bedrooms" value="{{foundOffer.bedrooms}}">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                    <label>
                                </div>
                            </div>
                            <div class="col-md-8 mb-3">
                                <div class="form-outline">
                                    <label style="color: #E1D89F ; font-size:larger;" font-size for="garages">Garages</label>
                                    <select style="background-color: #E1D89F;" name="garages" id="garages" value="{{foundOffer.garages}}">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                    <label>
                                </div>
                            </div>
                            <div class="col-md-8 mb-3">
                                <div class="form-outline">
                                    <label style="color: #E1D89F ; font-size:larger ; " for="livingRooms">Living Areas</label>
                                    <select style="background-color: #E1D89F;"  name=" livingAreas" id="livingAreas" value="{{foundOffer.livingAreas}}">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </select>
                                    <label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F; " type="text" name="description"
                                    placeholder=" Description" value="{{foundOffer.description}}" class="form-control" required />
                            </div>
                        </div>
                        <hr>
                    </div>
                    <input style="color: #E1D89F;" type="submit" value="Edit offer" class="btn-dark btn">
                    {{#if errorMessage}}
                    <p class="error">{{errorMessage}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>