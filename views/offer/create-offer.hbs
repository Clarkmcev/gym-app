<div class="container">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <h1>New offer</h1>

                <hr>

                <form action="/offer/create" method="POST" enctype="multipart/form-data">

                    <label for="types">Type :</label>
                        <select name="type" id="type">
                        <option value="flat">Flat</option>
                        <option value="house">House</option>

                        </select>
                    <label>

                    <label>
                        Name: <input type="text" name="name" placeholder="Name">
                    </label>

                    <label>
                        Address: <input type="text" name="address" placeholder="Address">
                    </label>

                    <label>
                        Land size: <input type="number" name="landSize" placeholder="500 m^2">m2
                    </label>

                    <label>
                        Image: <input type="file" name="image-cover" class="form-control-file" placeholder="image">
                    </label>

                    <label>
                        Price: <input type="number" name="price" placeholder="price">USD
                    </label>

                    <label for="toilets">Toilets :
                        <select name="toilets" id="toilets">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        </select>
                    </label>

                    <label for="bedrooms">Bedrooms :
                        <select name="bedrooms" id="bedrooms">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        </select>
                    </label>

                    <label for="garages">Garage spaces :
                        <select name="garages" id="garages">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        </select>
                    </label>

                    <label for="livingRooms">Living areas :
                        <select name="livingAreas" id="livingAreas">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        </select>
                    </label>

                    <label>
                        Description: <input type="text" name="description" placeholder="Description">
                    </label>

                    <input type="submit" value="Create offer" class="btn-dark btn">
                    {{#if errorMessage}}
                    <p class="error">{{errorMessage}}</p>
                    {{/if}}

                </form>

            </div>
        </div>
    </div>

</div>