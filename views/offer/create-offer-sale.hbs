<div class="container">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 style="color: #E1D89F ; font-size:1.1cm ; position:relative" class="fw-bold mb-2">My new offer</h2>
                <form action="/offer/create" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <select style="background-color: #E1D89F;" name="type" id="type">
                                    <option style="color:black ;" value="Sale">For sale</option>
                                    <option value="rent">For rent</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <div class="form-outline">
                                <select style="background-color: #E1D89F;" name="type" id="type">
                                    <option style="color:black ;" value="flat">Flat</option>
                                    <option value="house">House</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F; " type="text" name="name"
                                    placeholder="Title of the property" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="text" name="address"
                                    placeholder="Address" class=" form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="number" name="landSize"
                                    placeholder="Land size" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="file" name="image-cover"
                                    placeholder="Image" class=" form-control-file" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="number" name="price"
                                    placeholder=" Price in $" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9 mb-3">
                            <div class="form-outline">
                                <label style="color: #E1D89F ;font-size:larger ; " for="toilets">Toilets :</label>
                                <select style="background-color: #E1D89F;" name="toilets" id="toilets">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                                <label>
                            </div>
                        </div>
                        <div class="col-md-9 mb-3">
                            <div class="form-outline">
                                <label style="color: #E1D89F ; font-size:larger ; " for="bedrooms">Bedrooms
                                    :</label>
                                <select style="background-color: #E1D89F;" name="bedrooms" id="bedrooms">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                                <label>
                            </div>
                        </div>
                        <div class="col-md-9 mb-3">
                            <div class="form-outline">
                                <label style="color: #E1D89F ; font-size:larger ;  " font-size for="garages">Garages
                                    :</label>
                                <select style="background-color: #E1D89F;" name="garages" id="garages">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                                <label>
                            </div>
                        </div>
                        <div class="col-md-9 mb-3">
                            <div class="form-outline">
                                <label style="color: #E1D89F ; font-size:larger ; " for="livingRooms">Living Areas
                                    :</label>
                                <select style="background-color: #E1D89F;"  name=" livingAreas" id="livingAreas">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                                <label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-outline">
                                <input style="background-color: #E1D89F;" type="text" name="description"
                                    placeholder=" Description" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <input style="color: #E1D89F ; " type="submit" value="Create offer" class="btn-dark btn">
                    {{#if errorMessage}}
                    <p class="error">{{errorMessage}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>